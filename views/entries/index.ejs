<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entries Index</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }
        
        header {
            background-color: #333;
            color: #fff;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        h1 {
            font-size: 36px;
            margin: 0;
        }
        
        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
        }
        
        nav li {
            margin-left: 20px;
        }
        
        nav a {
            color: #fff;
            text-decoration: none;
        }
        
        main {
            margin: 20px;
        }
        
        h2 {
            font-size: 24px;
            margin: 0;
        }
        
        ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }
        
        li {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
        }
        
        .visited {
            background-color: #4CAF50;
            color: #fff;
        }
        
        .unvisited {
            background-color: #f44336;
            color: #fff;
        }
        
        #all {
            cursor: pointer;
        }
        
        #visited {
            cursor: pointer;
        }
        
        #unvisited {
            cursor: pointer;
        }
        main {
        margin: 0 auto;
        max-width: 800px; /* adjust as necessary */
    }

    ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    li {
        border: 1px solid #ccc;
        margin-bottom: 10px;
        padding: 10px;
        max-width: 600px; /* adjust as necessary */
    }

    .visited {
        color: green;
    }

    .unvisited {
        color: red;
    }
    </style>
</head>
<body>
    <header>
    <h1>Entries</h1>
    <h4 id="all">All</h4>
    <h4 id="visited">Visited</h4>
    <h4 id="unvisited">Unvisited</h4>
        <nav>
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/entries/new">Create a new Entry</a>
                </li>
            </ul>
        </nav>
    </header>
    <main>
        <h2>List of Entries</h2>
        
            <ul>
               <% for( let i = 0; i < entries.length; i++ ) { %>
                <a href="/entries/<%= entries[i]._id%>">
                    <li <%if (!entries[i].visited) {%> class='unvisited' <% } else { %> class='visited' <% } %>><%= entries[i].country %>
                        <% if (entries[i].region) { %>
                    <ul>
                    <li><%=entries[i].region%></li>
                    <% } %>
                    <ul>
                    <li><%=entries[i].city%></li>
                    </ul>
                    <% if (entries[i].region) { %>
                    </ul>
                </li>
                <% } %>
                </a>
                <% } %>
            </ul>
        <!-- <h2> Traveler's Checklist</h2> -->
    </main>
    <script>
        let visitedElements = document.querySelectorAll('.visited')
        let unvisitedElements = document.querySelectorAll('.unvisited')
        console.log(visitedElements)
        console.log(unvisitedElements)

        document.getElementById('all').addEventListener("click", myFunction1);
        document.getElementById('visited').addEventListener("click", myFunction2);
        document.getElementById('unvisited').addEventListener("click", myFunction3);

        
function myFunction1() {
    visitedElements.forEach((element) => {
        element.style.display = 'block';
    });
    unvisitedElements.forEach((element) => {
        element.style.display = 'block';
    });
}
function myFunction2() {
    visitedElements.forEach((element) => {
        element.style.display = 'block';
    });
    unvisitedElements.forEach((element) => {
        element.style.display = 'none';
    });
}
function myFunction3() {
    visitedElements.forEach((element) => {
        element.style.display = 'none';
    });
    unvisitedElements.forEach((element) => {
        element.style.display = 'block';
    });
}
    </script>
</body>
</html>