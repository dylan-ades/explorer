<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Photos</title>
    <style>
        body {
            background-color: #1a1a1a;
            color: #ffbf00;
            font-family: Arial, sans-serif;
            font-size: 18px;
        }
    
        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }
    
        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }
    
        nav li {
            display: inline-block;
            margin: 0 10px;
        }
    
        nav a {
            color: #ffbf00;
            text-decoration: none;
            transition: all 0.3s ease-in-out;
        }
    
        nav a:hover {
            color: #fff;
        }
    
        main {
            margin: 50px auto;
            width: 90%;
        }
    
        h2 {
            font-size: 32px;
            margin-bottom: 20px;
            text-align: center;
            text-transform: uppercase;
        }
    
        ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }
    
        .pictures {
            display: inline-block;
            margin: 10px;
            position: relative;
        }
    
        .pictures img {
            cursor: pointer;
            display: block;
            height: auto;
            max-width: 100%;
            transition: all 0.3s ease-in-out;
        }
    
        .pictures img:hover {
            opacity: 0.8;
        }
    
        #full-image {
            display: block;
            margin: 20px auto;
            height: 70vh;
        }
    
        #caption {
            font-size: 2vh;
            text-align: center;
            margin: 20px auto;
        }
    
        li:last-child a {
            border: 2px solid #ffbf00;
            border-radius: 10px;
            padding: 10px;
            text-align: center;
            display: block;
            width: 200px;
            margin: 0 auto;
            color: #ffbf00;
            transition: all 0.3s ease-in-out;
        }
    
        li:last-child a:hover {
            background-color: #ffbf00;
            color: #1a1a1a;
            cursor: pointer;
        }
    </style>
    
</head>

<body>
    <header>
    <h1>Photos</h1>
        <nav>
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <!-- <li>
                    <a href="/entries/new">Create a new Entry</a>
                </li> -->
            </ul>
        </nav>
    </header>
    <main>
        <!-- <h2>List of Photos</h2> -->
            <ul>
               <% for( let i = 0; i < entries.length; i++ ) { %>
                    <% if(entries[i].imageYours)  {%>
                        <% for (let j = 0; j < entries[i].images.length; j++) { %>
                        <li class="pictures"><img src="../../uploads/<%=entries[i].images[j] %>" width="300vh" /><span hidden>Taken in <%=entries[i].city %>, <%=entries[i].region %>, <%=entries[i].country %></span></li>
                        <% } %>
                    <% } %>
                <% } %>
            </ul>
        
    </main>
    <img id="full-image">
    <p id="caption"></p>
    <script>
        const listItems = document.querySelectorAll('.pictures');
        const fullImage = document.getElementById('full-image');
        // document.querySelector('span').hide();

        listItems.forEach((item) => {
            item.addEventListener('click', (event) => {
                const clickedImage = event.target.querySelector('img');
                // if (clickedImage) {
                    const clickedImageSrc = event.target.getAttribute('src');
                    fullImage.setAttribute('src', clickedImageSrc);
                    fullImage.removeAttribute('width')
                    document.querySelector('span').removeAttribute("hidden")
                    document.getElementById('caption').innerText = item.innerText
                    console.log('occurred');
                    clearEverythingElse();
                    
                // }
            });
        });
        function clearEverythingElse() {
            const all = document.querySelector("main");
            console.log(all)
            // if (all) {
                all.remove();
                document.querySelector('h1').remove();
            // }
            document.querySelector('body').style.backgroundColor = 'black'
            document.querySelector('p').style.color = 'white'
            let newLi = document.createElement("li")
            newLi.innerHTML = `<a href="/photos">Back</a>`
            document.querySelector('ul').appendChild(newLi)
        }
        console.log(document.querySelector('p'))
    </script>
</body>
</html>